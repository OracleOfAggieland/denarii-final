{
  "name": "openai-firebase-chatbot",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "build:firebase": "next build",
    "start": "next start",
    "lint": "next lint",
    "test": "jest --watchAll=false",
    "validate-env": "node scripts/validate-env.js",
    "dev:validate": "npm run validate-env && npm run dev",
    "deploy": "npm run validate-env && npm run build:firebase && firebase deploy",
    "deploy:hosting": "npm run validate-env && npm run build:firebase && firebase deploy --only hosting",
    "deploy:apphosting": "firebase apphosting:backends:create --location=us-central1"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.11",
    "autoprefixer": "^10.4.21",
    "firebase": "^10.0.0",
    "firebaseui": "^6.1.0",
    "next": "^14.2.30",
    "openai": "^5.10.1",
    "postcss": "^8.5.6",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router-dom": "^7.7.0",
    "recharts": "^3.1.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^20.19.9",
    "@types/react": "^18.3.23",
    "@types/react-dom": "^18.3.7",
    "dependency-cruiser": "^17.0.0",
    "dotenv": "^17.2.0",
    "eslint": "^8.57.1",
    "eslint-config-next": "^14.0.4",
    "jest": "^30.0.4",
    "jest-environment-jsdom": "^30.0.4",
    "typescript": "^5.8.3"
  }
}
