# Production Environment Configuration
# Copy this file to .env.production for production deployments

# OpenAI API Configuration (REQUIRED)
OPENAI_API_KEY=your_production_openai_api_key_here

# Google API Configuration (REQUIRED for Gemini features)
GOOGLE_API_KEY=your_production_google_api_key_here

# Production OpenAI Configuration (Optimized for production use)
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_TEMPERATURE=0.5
OPENAI_MAX_TOKENS=200

# Application Configuration
NEXT_PUBLIC_APP_NAME=Denarii Advisor

# Environment
NODE_ENV=production

# Firebase Configuration (if using Firebase Functions)
# FIREBASE_PROJECT_ID=your_project_id
# FIREBASE_REGION=us-central1